      document.getElementById("startVatican").innerHTML = "<b>Vatican City St Peterâ€™s, Sistine Chapel:</b> " + "Start: " + hourconvert(startVatican) + " - End: " + hourconvert(endVatican)
    }
    if (startTivoli != "0"){
      document.getElementById("startTivoli").innerHTML = "<b>Hadrian's Villa and Villa d'Este:</b> " + "Start: " + hourconvert(startTivoli) + " - End: " + hourconvert(endTivoli)
    }
    if (startTrevi != "0"){
      document.getElementById("startTrevi").innerHTML = "<b>Trevi Fountain:</b> " + "Start: " + hourconvert(startTrevi) + " - End: " + hourconvert(endTrevi)
    }
    if (startPane != "0"){
