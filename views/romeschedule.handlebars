  var endIl = {{endIl}};
  var startLa = {{La}};
  var endLa = {{endLa}};
  var startFederica = {{Federica}};
  var endFederica = {{endFederica}};
  // // //New York Shopping
  var startPaciotti = {{Paciotti}};
  var endPaciotti = {{endPaciotti}};
  var startCastel = {{Castel}};
  var endCastel = {{endCastel}};
  var startMercato = {{Mercato}};
  var endMercato = {{endMercato}};

  function test() {
